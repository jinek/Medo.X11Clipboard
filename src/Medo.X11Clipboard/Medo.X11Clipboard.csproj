
<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AssemblyName>Medo.X11Clipboard</AssemblyName>
        <RootNamespace>Medo.X11</RootNamespace>
    </PropertyGroup>

    <PropertyGroup>
        <OutputType>Library</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <LangVersion>12.0</LangVersion>
        <Nullable>enable</Nullable>
        <IsAotCompatible>true</IsAotCompatible>
    </PropertyGroup>

    <PropertyGroup>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <PropertyGroup>
        <AnalysisLevel>latest</AnalysisLevel>
        <AnalysisMode>AllEnabledByDefault</AnalysisMode>
        <EnableNETAnalyzers>true</EnableNETAnalyzers>
        <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
        <NoWarn>CA1720</NoWarn>
        <!-- CA1720: Identifiers should not contain type names -->
    </PropertyGroup>

    <PropertyGroup>
        <Authors>Evgeny Gorbovoy</Authors>
        <Description>Fork of Medo.X11Clipboard by Josip Medved. CA1031 compliance, custom exception type (X11ClipboardException), and UnhandledException event. Changes implemented by Junie with ChatGPT-5.</Description>
    </PropertyGroup>

</Project>
